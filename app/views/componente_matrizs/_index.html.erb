						<% if @componentes.nil?

							@componentes = componentes

						end %>

<div id="atv_componente">
		<table class="table table-striped">
				     <thead>
				        <tr>
		              <th>Componente</th>
		              <th>Matriz</th>
									<th>Disciplina</th>
		              <th colspan="3" style="text-align:center;">Ações</th>
				        </tr>
				        </thead>
				        <tbody>

									<% @componentes.each do |componente|%>
				      		<tr>
										<td><%= componente.nome %></td>
										<td><%= componente.matriz.nome %></td>
										<td><%= componente.disciplina.nome %></td>
										<td><%= link_to componente do %>
													 <i class="fa fa-search"></i>
												<% end %>
										</td>
							
										<td><%= link_to edit_componente_matriz_path(componente) do %>
											<i class="fa fa-search"></i>
											<% end %>
										</td>

										<td>
											<%= link_to componente_matriz_path(componente), method: :delete, data: { confirm: 'Deseja Excluir?' } do %>
											<i class="fa fa-minus-circle"></i>
										</td>
										<% end %>

									</tr>
									<%end %>
				        </tbody>
				    </table>

					</div>
